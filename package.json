{
	"name": "vscode-lsp",
	"description": "A LSP for JSON",
	"version": "0.0.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/Johanpdrsn/vscode-LSP"
	},
	"publisher": "Johan-p",
	"keywords": [
		"lsp",
		"json LSP",
		"Deltek"
	],
	"categories": [
		"Other",
		"Linters"
	],
	"engines": {
		"vscode": "^1.32.0"
	},
	"activationEvents": [
		"onLanguage:json"
	],
	"main": "./client/out/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.lsp",
				"title": "Test Command"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.lsp"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.6",
		"@types/node": "^8.10.46",
		"tslint": "^5.16.0",
		"typescript": "^3.4.5"
	}
}
